#Bar chart
import matplotlib.pyplot as plt
# Sample data
categories = ['Category A', 'Category B', 'Category C']
values = [25, 50, 75]
# Create bar chart
plt.bar(categories, values)
# Set labels and title
plt.xlabel('Categories')
plt.ylabel('Values')
plt.title('Bar Chart')
# Display the chart
plt.show()
# line chart
import matplotlib.pyplot as plt
# Create line chart
plt.plot(x, y)
# Set labels and title
plt.xlabel('X-axis')
plt.ylabel('Y-axis')
plt.title('Line Chart')
# Display the chart
plt.show()
# pie chart
import matplotlib.pyplot as plt
# Sample data
categories = ['Category A', 'Category B', 'Category C']
sizes = [30, 50, 20]
# Create pie chart
plt.pie(sizes, labels=categories, autopct='%1.1f%%')
# Set title
plt.title('Pie Chart')
# Display the chart
plt.show()
